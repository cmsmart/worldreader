<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Iso</th>
      <th>Name</th>
      <th>Region</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.iso %></td>
        <td><%= country.name %></td>
        <td><%= country.region.name %></td>
        <td><%= link_to 'Show', country %></td>
        <td><%= link_to 'Edit', edit_country_path(country) %></td>
        <%#= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %>
      </tr>
    <% end %>
  </tbody>
</table>