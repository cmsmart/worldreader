<%# Metadata %>
<% @page_title = 'Profile' %>
<% @meta_description = "Profile page for  #{@profile.user.username}" %>

<%# Page class %>
<% @page_id = 'profile' %>

<%# Content %>

<div class="small-title">Profile</div>

<h1><%= @profile.user.username %></h1>

<p class="text-center"><%= link_to 'Edit account details', edit_user_registration_path %></p>

<h2> Country of residence: <%= @profile.country.name %></h2>

<div class="photo rounded-circle">
 <% if @profile.avatar.present? %>
    <figure>
    <%= image_tag @profile.avatar_url(:thumb), alt: " #{@profile.user.username}" %>
    </figure>
  <% else %>
    <%= image_tag 'default_writer.jpg', alt: 'default image' %>
  <% end %>
  </div>

<%= link_to 'Edit', edit_profile_path(@profile) %> |
<%= link_to 'Back', profiles_path %>
