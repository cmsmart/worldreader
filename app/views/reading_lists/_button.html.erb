<% if current_user.reading_list?(book) %>
    <%= link_to remove_reading_list_path(book_id: book.id), remote: true, method: :delete, class: 'button disabled' do %>
        Added to reading list <i class="fa fa-bookmark" aria-hidden="true"></i>
    <% end %>
<% else %>
    <%= link_to reading_list_path(book_id: book.id), remote: true, method: :post, class: 'button' do %>
        Add to reading list <i class="fa fa-bookmark-o" aria-hidden="true"></i>
    <% end %>
<% end %>

