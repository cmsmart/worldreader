<%# Metadata %>
<% @page_title = @region.name %>
<% @meta_description = "Countries of #{@region.name}" %>

<div class="small-title">Region</div>

<h1>
  <%= @region.name %>
</h1>

<div class="text-center">
  <% @countries.order(:name).each do |country| %>
    <p><%= link_to country.name, country %></p>
  <% end %>
</div>

<%= link_to 'Edit', edit_region_path(@region) %> |
<%= link_to 'Back', regions_path %>