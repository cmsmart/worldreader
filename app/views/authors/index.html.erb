<h1>Authors</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <!-- <th>ID</th> -->
      <th>Goodreads ID</th>
      <th>Country</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @authors.order("name").each do |author| %>
      <tr>
        <td><%= link_to author.name, author %></td>
        <!-- <td><%= link_to author.id, author %></td>-->
        <td><%= author.goodreads_id %></td>
        <td><%= author.country.name %></td>

        <% if current_user.try(:admin?) %> 
        <td><%= link_to 'Edit', edit_author_path(author) %></td>
        <td><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Author', new_author_path %>
