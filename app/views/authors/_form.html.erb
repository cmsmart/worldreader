<%= form_with(model: author, local: true) do |form| %>
  <% if author.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(author.errors.count, "error") %> prohibited this author from being saved:</h2>

      <ul>
      <% author.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :author_name %>
  </div>

  <div class="field">
    <%= form.label :country_id %>
    <%= form.text_field :country_id, id: :author_country_id %>
  </div>

  <div class="field">
    <%= form.label :goodreads_id %>
    <%= form.number_field :goodreads_id, id: :author_goodreads_id %>
  </div>

  <p>Only complete the fields below if no Goodreads ID is provided</p>

  <div class="field">
    <%= form.label :bio %>
    <%= form.text_area :bio, id: :author_bio %>
  </div>

  <div class="field">
    <%= form.label :dob %>
    <%= form.date_select :dob, id: :author_dob, start_year: 1900, include_blank: true %>
  </div>

  <div class="field">
    <%= form.label :photo %>
    <%= form.file_field :photo, id: :author_photo_image %>
</div>

 <div class="field">
    Remove attachment: <%= form.check_box :remove_photo %>
</div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
